<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Html.Partial("ErrorHandler")      
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Queue", "Queue", "Queue", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-header">
                @Html.ActionLink("Send Message", "SendMessage", "Queue", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        
        <div id="appViewport" data-bind="template: 'applicationRoot'">
            
        </div>
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Message Service</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/libs")
    @Scripts.Render("~/bundles/app")

    @Html.Partial("ServerVars")
    @RenderSection("scripts", required: false)
    @Html.Partial("SharedTemplates")
    @RenderSection("koTemplates", required: false)

</body>
</html>
